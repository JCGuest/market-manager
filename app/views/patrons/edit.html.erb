<div class="top">
    <h2>Edit Patron <%= @patron.id %></h2>
</div> 

<br>
<br>
<h3>
    <small class='text-muted'>
    <p>
    <% if !@patron.errors.full_messages.blank?  %>
    <% @patron.errors.full_messages.each do |message| %>
    <%= message %>
    <br>
    <% end %>
    <%end %>
    </p>
</h3>

<div style="width:50%; margin:0 auto;">
<table style="background-color: white"  align="center" class="table table-bordered">
    <%= form_for(@patron, url: update_patron_url(@patron)) do |f| %>
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Phone</th>

        </tr>
    </thead>
        <tbody>
            <tr>
                <td><%= f.text_field :name %></td>
                <td><%= f.text_field :phone %></td>

            </tr>
        </tbody>
</table>   
                <%= f.submit %>
                <% end %>  
</div>                 
<hr>
