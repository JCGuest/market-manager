<div class="header-row" id="header-row" style="padding: 0px; overflow:hidden; height:72px; background-color: white; margin:0 auto; width:70%;">
    <h2 align="center" >Edit Order <%= @order.id %></h2>
</div> 
<h3 style="width:70%; margin:0 auto;">
            <small class='text-muted'>
            <%if !flash[:message].blank? %>
            <%= flash[:message] %>
            <% end %>

            <% if !@order.errors.full_messages.blank?  %>
            <% @order.errors.full_messages.each do |message| %>
            <%=message %>
            <br>
            <% end %>
            <% end %>

        
            <% if @patron && !@patron.errors.full_messages.blank?  %>
            <% @patron.errors.full_messages.each do |message| %>
            Patron <%= message %>
            <br>
            <% end %>
            <%end %>
        </h3>


<%= render partial: 'form', locals: { order: @order, clerk: @clerk, patron: @order.patron, url: update_clerk_order_url } %>
