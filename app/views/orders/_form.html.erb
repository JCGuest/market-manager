<br>
<div style="width: 70%; margin:0 auto;">
<%= form_for(order, url: url) do |f| %>
<%= f.fields_for patron, Patron.new do |ff| %>

<table style="background-color: white;"  class="table table-bordered">
    <thead>
        <tr>
            <th scope="col">Patron Name</th>
            <th scope="col"> Patron Phone Number</th>
            <th scope="col">Item</th>
            <th scope="col">Amount</th>
            <th scope="col">Pick Up Date</th>
            <th scope="col">Completed?</th>

        </tr>
    </thead>
        <tbody>
            <tr>
                <th scope="row">
                <%= ff.text_field :name %>    
                    <br>or<br>
                <%=f.collection_select :patron_id, Patron.all, :id, :name, prompt: "Select One"%>
                </th>
                <td><%= ff.text_field :phone %><br></td>
                <td><%= f.text_field :item %></td>
                <td><%= f.text_field :amount %></td>
                <td><%= f.text_field :pick_up, type:"date" %></td>
                <td><%= f.select :complete, options_for_select([["no", "false"], ["yes", "true"]])%></td>
                
            </tr>
        </tbody>
</table>   
                <%= f.submit %>
                <% end %>   
                <%end %>
</div>                
               
<hr>
        <div align="center">
            <button type="button" class="btn btn-dark">
                <h4>
                    <%= link_to "Back To Orders", clerk_orders_path(@clerk) %>
                </h4>  
            </button>
      </div>