
<br><br>
<div class="header-row" id="header-row" style="padding: 0px; overflow:hidden; height:80px; background-color: blue;">
    <h1 align="center">Welcome, <%=@clerk.email%>.</h1>
</div>  
<br>
<% if flash[:message] %>
    <h3>
    <small class="text-muted"><%=flash[:message]%></small></h3></p>
    <%end%>
  <%if @orders.empty?%>
  <h5 align="center">You have no orders</h5>
  <%else%>
  
<table style="width:90%"  align="center" class="table table-bordered">
  <thead>   
  <tr>
          <th scope="col">Number</th>
          <th scope="col"> Customer Name</th>
          <th scope="col">Item</th>
          <th scope="col">Amount</th>
          <th scope="col">Pick Up Date</th>
    </tr>
  </thead>
  <% @orders.each do |o|%>
       <tbody>
        <tr>
          <th scope="row"><%=o.id%>
          <%= link_to "|Open", clerk_order_url(o.clerk, o.id) %>
          <%= link_to "|Edit", edit_clerk_order_url(o.clerk, o.id) %>
          </th>
            <td><%=o.patron.name%></td>
            <td><%=o.item%></td>
            <td><%=o.amount%></td>
            <td><%=o.pick_up%></td>
        </tr>
        <%end%>
        <%end%>
      </tbody>
      </table>
      <hr>
      <div align="center">
      
        <button type="button" class="btn btn-dark">
          <h3>
            <%= link_to "New Order", new_clerk_order_url(@clerk)%>
            <%= link_to "Logout", logout_path %>
          </h3>
        </button>
       
      </div>