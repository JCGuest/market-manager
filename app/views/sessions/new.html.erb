 <%= form_tag(sessions_path, {:class => "form-signin"}) do %>
    <div class="container">
        <h2 class="display-1">Log in</h2>
        <p>
          <h3>
            <small class="text-muted">Please fill in this form to log in.</small>
            <small class="text-muted">Or <%= link_to "login with GitHub.", '/auth/github' %></small></h3></p>
        <hr>
            <h3>
                <small class="text-muted">
                    <% if flash[:message]  %>
                    <%= flash[:message] %>
                    <%end %>
            </h3>
        <br>
      <%= label_tag :email,nil, class:'sr-only' %>
      <%= text_field_tag :email,nil, class:'form-control', placeholder:'Email' %>
      <br>
      <br>
      <%= label_tag :password,nil, class:'sr-only' %>
      <%= text_field_tag :password,nil, class:'form-control', placeholder:"Password" %>
      <hr>
      <br>
      <%= submit_tag value="Login" %>
    </div>
     <br>
      <div class="container signin">
        <p>
          <h4>
            <small class="text-muted">Don't have an account? <%= link_to "Sign up", new_clerk_path %>.<small><h4></p>
    </div>
    
<% end %>